void numoper(int numsuc[15], float totd[15], float Dire, int bus)
{
    int i, k, a;
    printf("Inqurese la sucursal que desea encontrar.En caso de querer finalizar la operacion ingrese 0\n");
    scanf("%d",&bus);
    while(bus!=0)
     {
        k=0;
        i=0;
       while(k==0 && i<15)
       {
         if(bus== numsuc[i])
          {
            k=1;
            a=i;
          }
          else
          {
           i++;
          }

       }
        if(k==0)
        {
           printf("La sucura que se ha buscado\n");
        }
        else
        {
          Printf("Ingrese el nuevo valor de lo recaudado en el dia\n");
          scanf("%f",totd[a]);
        }
        printf("Inqurese la sucursal que desea encontrar.En caso de querer finalizar la operacion ingrese 0\n");
    scanf("%d",&bus);
    }
}

void carga(int numsuc[15], float totd[15])
{
 int i;
 for(i=0;i<15;i++)
 {
   printf("Ingrese el numero de sucursal\n");
   scanf("%d",&numsuc[i]);
   printf("Ingrese lo recaudado en el dia\n");
   scanf("%f",&totd[i]);

 }
}

void mas de 800(int numsuc[15, float totd[15], float Sm800[15])
{
    int i, j;
    for(i=0;i<15;i++)
    {
        if(totd[i] > 800)
        {
            Sm800[j] = numsuc[i];
            j++;
        }
    }
}
